#include <stdio.h>

int main() {
int day = 0;
int money = 0;
scanf("%d",&day);
int i = 0,j=0,cnt=0,sum=0,flag=0,sum1=0;
for(i=1;i<=day;i++)
{
    for(j=1;j<=i;j++)
    {
        sum+=i;
        cnt++;
        if(cnt==day)
        {
            flag=1;
            break;
        }
    }
    if(flag==1)
    {
        sum1 = sum;
        break;
    }
}
if(flag==1)
printf("%d",sum1);
else
 printf("%d",sum);
    return 0;
}
